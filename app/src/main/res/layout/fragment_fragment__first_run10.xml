<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.chaitanyad.rembrit.Fragment_FirstRun8">

    <!-- TODO: Update blank fragment layout -->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
    android:layout_width="match_parent"
    android:gravity="center"
    android:textSize="17dp"
    android:layout_height="59dp"
    android:text="Is this your routine?\nIf not, swipe back to change it."
    android:layout_gravity="center_horizontal|top"
    android:allowUndo="false"
    android:contextClickable="false"
    android:editable="false"
    android:enabled="true"
    android:id="@+id/textView" />
</LinearLayout>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/confWakeup"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/confLeaveForWork"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/confReachWork"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/confLunch"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/confLeaveFromWork"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/confReachHome"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/confDinner"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/confSleep"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"/>
    </LinearLayout>


</LinearLayout>
